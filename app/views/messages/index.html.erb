<p id="notice" style="color: white">
  <%= notice %>
</p>

<h1>
Заметок:
<span id="message_counter">
<%= Message.count %>
</span>
</h1>

<div id="new_message">
<%= render partial: "messages/form", locals: { message: Message.new } %>
</div>

<div id="messages">
  <% @messages.each do |message| %>
    <p>
    <%= render message %>
    </p>
  <% end %>
</div>

<%= link_to "Новая заметка", new_message_path %>
