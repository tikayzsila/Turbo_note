<p style="color: green"><%= notice %></p>

<h1>Заметки</h1>

<div id="new_message">
<%= render partial: "messages/form", locals: { message: Message.new } %>
</div>

<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
    <p>
      <%= link_to "Перейти к заметке", message %>
    </p>
  <% end %>
</div>

<%= link_to "Новая заметка", new_message_path %>
