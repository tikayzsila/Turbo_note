<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div style="color: white">
      <h2><%= pluralize(message.errors.count, "ошибка") %> Невозможно сохранить заметку:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"Введите текст", style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
